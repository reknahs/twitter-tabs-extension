{
  "manifest_version": 3,
  "name": "Twitter Tabs",
  "version": "1.0.0",
  "description": "Adds custom topic based tabs to Twitter with AI-based content filtering",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["twitter-tabs-content.js"],
      "css": ["twitter-tabs-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "twitter-tabs-background.js"
  },
  "action": {
    "default_popup": "twitter-tabs-popup.html",
    "default_title": "Twitter Tabs"
  },
  "web_accessible_resources": [
    {
      "resources": ["twitter-tabs-styles.css"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}