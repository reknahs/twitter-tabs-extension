{
  "manifest_version": 3,
  "name": "Twitter Tabs",
  "version": "3.0.0",
  "description": "Filters Twitter timeline by topic",
  "icons": {
    "48": "icons/favicon-96x96.png",
    "96": "icons/favicon-96x96.png",
    "128": "icons/apple-touch-icon.png",
    "192": "icons/web-app-manifest-192x192.png",
    "512": "icons/web-app-manifest-512x512.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*"],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["inject.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["twitter-tabs-content.js"],
      "css": ["twitter-tabs-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "twitter-tabs-popup.html",
    "default_title": "Twitter Tabs"
  }
}
