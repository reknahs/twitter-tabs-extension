{
  "manifest_version": 3,
  "name": "Twitter Topic Filter",
  "version": "2.0.0",
  "description": "Filter Twitter timeline by topic with real-time response interception",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["inject.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["twitter-tabs-content.js"],
      "css": ["twitter-tabs-styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "twitter-tabs-background.js"
  }
}